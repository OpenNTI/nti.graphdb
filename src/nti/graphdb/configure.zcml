	<!-- Graph Queue Processor -->
	<include package="." file="meta.zcml" />
	<configure zcml:condition="have testmode">
		<gdb:registerImmediateProcessingQueue />
	</configure>

	<configure zcml:condition="not-have testmode">
		<gdb:registerRedisProcessingQueue />
	</configure>

	<!-- Graph Store -->
	<configure zcml:condition="have testmode">
		<gdb:registerGraphDB />
	</configure>

</configure>

